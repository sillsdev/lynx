{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "@sillsdev/lynx#build"],
      "outputs": ["dist/**"]
    },
    "@sillsdev/lynx#build": {
      "dependsOn": [],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "topo": {
      "dependsOn": ["^topo"]
    },
    "check-types": {
      "dependsOn": ["topo"]
    },
    "lint": {}
  }
}
