{
  "name": "lynx-vscode",
  "version": "1.0.0",
  "main": "./dist/extension.js",
  "scripts": {
    "build": "tsup-node src/extension.ts src/server.ts --format cjs --clean --sourcemap",
    "dev": "tsup-node src/extension.ts src/server.ts --format cjs --watch --sourcemap",
    "check-types": "tsc --noEmit",
    "lint": "eslint ."
  },
  "author": "SIL Global",
  "license": "MIT",
  "description": "",
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:usfm"
  ],
  "contributes": {
    "languages": [
      {
        "id": "usfm",
        "extensions": [
          ".SFM",
          ".sfm",
          ".usfm",
          ".USFM"
        ],
        "aliases": [
          "USFM"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Lynx Test",
      "properties": {
        "lynxTest.maxNumberOfProblems": {
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "lynxTest.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "dependencies": {
    "lynx-core": "*",
    "lynx-usfm": "*",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1"
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "@repo/eslint-config": "*",
    "@types/node": "^20.16.5",
    "@types/vscode": "^1.93.0",
    "eslint": "^9.9.1",
    "tsup": "^8.3.0",
    "typescript": "^5.5.4"
  }
}
