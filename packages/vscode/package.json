{
  "name": "@sillsdev/lynx-vscode",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "main": "./dist/extension.cjs",
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --sourcemap",
    "check-types": "tsc --noEmit",
    "lint": "eslint ."
  },
  "author": "SIL Global",
  "license": "MIT",
  "description": "",
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:usfm"
  ],
  "contributes": {
    "languages": [
      {
        "id": "usfm",
        "extensions": [
          ".SFM",
          ".sfm",
          ".usfm",
          ".USFM"
        ],
        "aliases": [
          "USFM"
        ]
      }
    ]
  },
  "dependencies": {
    "@sillsdev/lynx": "*",
    "@sillsdev/lynx-examples": "*",
    "@sillsdev/lynx-punctuation-checker": "*",
    "@sillsdev/lynx-usfm": "*",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/tsdown-config": "*",
    "@repo/typescript-config": "*",
    "@types/node": "^20.16.5",
    "@types/vscode": "^1.93.0",
    "eslint": "^9.39.1",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3"
  },
  "files": [
    "dist"
  ]
}
